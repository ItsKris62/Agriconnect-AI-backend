{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "src",
      "paths": {
        "*": ["*"]
      },
      "outDir": "dist",
      "sourceMap": true,
      "moduleResolution": "node"
    },
    "ts-node": {
      "transpileOnly": true,
      "files": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }